<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tituloTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Elecciones Municipales"
        android:textSize="24sp"
        android:layout_gravity="center"/>

    <EditText
        android:id="@+id/edadEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ingrese su edad"
        android:inputType="number"
        android:layout_marginTop="16dp"/>

    <Button
        android:id="@+id/votarButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Votar"
        android:layout_marginTop="16dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp">

        <TextView
            android:id="@+id/resultadosTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Resultados:"
            android:textSize="18sp"/>

        <Button
            android:id="@+id/finalizarButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Finalizar"/>
    </LinearLayout>

    <TextView
        android:id="@+id/ganadorTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="20sp"
        android:layout_marginTop="16dp"
        android:textStyle="bold"
        android:gravity="center"/>

</LinearLayout>
